<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="unknow" id="create-table-parts-1">
        <sql>
            DROP TABLE IF EXISTS public.parts CASCADE;
        </sql>


        <createTable
                catalogName="catalogavtozapchasti"
                schemaName="public"
                tableName="parts">
            <column name="brantype" type="varchar(4)"/>

            <column name="brand" type="varchar(15)"/>

            <column name="descr" type="varchar(30)"/>

            <column name="arstat" type="varchar(10)"/>

            <column name="faltpartnum" type="varchar(13)">
                <constraints nullable="false"/>
            </column>

            <column name="partnum" type="varchar(13)">
                <constraints nullable="false"/>
            </column>

        </createTable>
        
        <addPrimaryKey
                tableName="parts"
                columnNames="partnum"
                constraintName="parts_pkey"/>

        <addForeignKeyConstraint
                baseTableName="parts"
                baseColumnNames="altpartnum"
                constraintName="foreign_key_altpartnum"
                referencedTableName="altpartnum"
                referencedColumnNames="partsvehicles"/>

    </changeSet>
</databaseChangeLog>
